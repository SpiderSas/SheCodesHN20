
<P>:
    Label:
        text: "Ban da submit, cam on ban da chia se"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}
<Button>:
    font_side : 100
    size_hint : 0.8, 0.2

WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"
    dia_chi : dia_chi
    su_viec : su_viec

    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Label:
                text: "dia chi: "

            TextInput:
                id: dia_chi
                multiline: False
            Label:
                text: "su viec: "

            TextInput:
                id: su_viec
                multiline: False

        Button:
            text: "Submit"
            on_release:
                root.btn()
        Button:
            text : "xem bang tin"
            on_release:
                app.root.current = "second"


<SecondWindow>:
    name : "second"
    text : text
    GridLayout:
        cols : 2
        GridLayout:
            cols : 1
            Label:
                id : text
                text : root.texting()

    Button:
        size_hint : 0.1, 0.2
        text: "Back"
        on_release:
            app.root.current = "main"
