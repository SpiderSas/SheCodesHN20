    Label:
        text: "Submitted. Thank you for sharing."
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}
<Button>:
    font_side : 100
    size_hint : 0.8, 0.2
WindowManager:
    ReportWindow:
    WatchWindow:

<ReportWindow>:
    name: "report"
    dia_chi : dia_chi
    su_viec : su_viec

    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Label:
                text: "Address: "

            TextInput:
                id: dia_chi
                multiline: False
            Label:
                text: "Incident: "

            TextInput:
                id: su_viec
                multiline: False

        Button:
            text: "Send"
            on_release:
                root.btn()
        Button:
            text : "See reports"
            on_release:
                app.root.current = "watch"
        Button:
            text: "Back to main menu"
            on_release:
                app.root.current = "main"


<WatchWindow>:
    name : "watch"
    text : text
    GridLayout:
        cols : 2
        GridLayout:
            cols : 1
            Label:
                id : text
                text : root.texting()

    Button:
        size_hint : 0.1, 0.2
        text: "Back"
        on_release:
            app.root.current = "report"
